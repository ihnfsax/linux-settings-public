" Basic Settings
set number
set cursorline
set ruler
set copyindent
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set laststatus=2
set showmatch
set autoread
set fileencodings=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
set termencoding=utf-8
set encoding=utf-8
syntax enable
filetype plugin indent on
inoremap {<CR> {<CR>}<Esc>ko
set cinkeys-=: